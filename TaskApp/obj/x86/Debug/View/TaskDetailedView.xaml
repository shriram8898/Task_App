<Page
    x:Class="TaskApp.View.TaskDetailedView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskApp.View"
    xmlns:data="using:TaskApp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <CollectionViewSource x:ConnectionId='2' x:Key="cvs" x:Name="cvs" IsSourceGrouped="True" />
    </Page.Resources>
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="listviewcolumn.Width" Value="0"/>
                        <Setter Target="detailviewcolumn.Width" Value="*"/>
                        <Setter Target="Panel1.Orientation" Value="Vertical"/>
                        <Setter Target="Panel2.Orientation" Value="Vertical"/>
                        <Setter Target="Panel3.Orientation" Value="Vertical"/>
                        <Setter Target="Panel4.Orientation" Value="Vertical"/>
                        <Setter Target="Panel5.Orientation" Value="Vertical"/>
                        <Setter Target="taskname.Width" Value="300"/>
                        <Setter Target="detsila.Orientation" Value="Vertical"/>
                        <Setter Target="combox.Width" Value="250"/>
                        <Setter Target="_pivot.Width" Value="400"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState >
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="listviewcolumn.Width" Value="0"/>
                        <Setter Target="detailviewcolumn.Width" Value="*"/>
                        <Setter Target="taskname.Width" Value="600"/>
                        <Setter Target="detsila.Orientation" Value="Vertical"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState >
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1000"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="detsila.Orientation" Value="Vertical"/>
                        <Setter Target="detsila.Margin" Value="0,0,0,0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState >
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1100"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='3' x:Name="listviewcolumn" Width="250"/>
            <ColumnDefinition x:ConnectionId='4' x:Name="detailviewcolumn" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled">
                <Border BorderBrush="#D3D3D3"  BorderThickness="0,0,0.5,0">
                    <StackPanel>
                        <TextBlock Text="Task" FontFamily="Times New Roman" FontSize="28" Margin="10,13,0,0"/>

                        <ListView x:ConnectionId='65' x:Name="tasks" ItemsSource="{Binding td}" IsItemClickEnabled="True"                            >
                            <ListView.ItemTemplate>
                                <DataTemplate                              >
                                    <StackPanel>
                                        <local:MasterUserControl/>
                                        <Border Width="300" BorderBrush="Black" Opacity="0.25" BorderThickness="0,0.5,0,0" Margin="0,0,20,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1" Margin="10,0,10,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <RelativePanel>
                        <Button x:ConnectionId='60' x:Name="exit" FontFamily="Segoe MDL2 Assets" Content="&#xE106;"                    RelativePanel.AlignRightWithPanel="True"
                                ToolTipService.ToolTip="Exit"/>
                        <Button x:ConnectionId='61' x:Name="delete" FontFamily="Segoe MDL2 Assets" Content="&#xE107;"                      RelativePanel.LeftOf="exit" Margin="0,0,3,0"
                                ToolTipService.ToolTip="Delete Task"/>
                        <Button x:ConnectionId='62' x:Name="Edit" FontFamily="Segoe MDL2 Assets" Content="&#xE104;"                    RelativePanel.LeftOf="delete" Margin="0,0,3,0"
                                ToolTipService.ToolTip="Edit task"/>
                        <Button x:ConnectionId='63' x:Name="completed" Content="Mark as Completed"                         RelativePanel.AlignLeftWithPanel="True" Margin="0,0,3,0"
                                Visibility="Collapsed"/>
                        <Button x:ConnectionId='64' x:Name="Back" FontFamily="Segoe MDL2 Assets" Content="&#xE0A6;"                    RelativePanel.RightOf="completed" Margin="0,0,3,0"
                                ToolTipService.ToolTip="Go Back" Visibility="Collapsed" Height="32"/>
                    </RelativePanel>
                    <TextBlock x:ConnectionId='28' Name="taskname" Text="{Binding name,Mode=TwoWay}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Left" 
                               FontFamily="Times New Roman" Width="900" TextWrapping="Wrap" MaxLines="2" Height="50" Margin="20,20,0,0"/>
                    <StackPanel x:ConnectionId='29' x:Name="detsila" Orientation="Horizontal">
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Description" HorizontalAlignment="Left" Height="25" Margin="20,20,0,0"  TextWrapping="Wrap" 
                                       VerticalAlignment="Top" Opacity="0.5" FontSize="18" />
                            <TextBlock x:ConnectionId='44' x:Name="td" Text="{Binding details,Mode=TwoWay}"  HorizontalAlignment="Left"  TextWrapping="Wrap" 
                                       MaxWidth="300" Margin="20,0,0,0" FontSize="15"/>
                            <StackPanel x:ConnectionId='45' x:Name="Panel1" Orientation="Horizontal" Margin="20,20,0,10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="Task ID" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="0,10,0,0" Opacity="0.5" FontSize="18" Width="100"/>
                                    <TextBlock x:ConnectionId='59' x:Name="taskid" HorizontalAlignment="Left" Text="Sample" TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="10,10,10,0" Width="200" FontSize="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Created On" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                                   Margin="0,10,10,0" Opacity="0.5" Width="100" FontSize="18" />
                                    <TextBlock x:ConnectionId='58' x:Name="taskcreated" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Center" 
                                                   Margin="0,10,10,0" Width="200" FontSize="15"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel x:ConnectionId='46' x:Name="Panel2" Orientation="Horizontal" Margin="10,20,0,10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="Assign To" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                                   Margin="10,10,10,0" Opacity="0.5" Width="100" FontSize="18"/>
                                    <TextBlock x:ConnectionId='57' x:Name="taskassignto" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" 
                                                   Margin="0,10,0,0" Width="200" FontSize="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Assign By" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="10,10,0,0" Opacity="0.5" FontSize="18" Width="100"/>
                                    <TextBlock x:ConnectionId='56' x:Name="taskassignby" HorizontalAlignment="Left" Text="Sample" TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="10,10,10,0" Width="200" FontSize="15"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel x:ConnectionId='47' x:Name="Panel3" Orientation="Horizontal" Margin="10,20,0,10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="Updated On" HorizontalAlignment="Left" Height="25" Margin="10,16.5,0,0"  
                                                   TextWrapping="Wrap" VerticalAlignment="Top" Opacity="0.5" Width="100" FontSize="18" />
                                    <TextBlock x:ConnectionId='55' x:Name="taskupdated"  HorizontalAlignment="Left" Text="TextBlock"  
                                                   TextWrapping="Wrap" Width="200" Margin="10,20,0,0" FontSize="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Priority" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="10,10,0,0" Opacity="0.5" FontSize="18" Width="100"/>
                                    <ComboBox x:ConnectionId='54' x:Name="taskpriority" SelectedItem="{Binding priority,Mode=TwoWay}"                                           
                                              Margin="10,20,0,0" Width="200" FontSize="15"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel x:ConnectionId='48' x:Name="Panel4" Orientation="Horizontal" Margin="10,20,0,10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="Status" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="10,10,0,0" Opacity="0.5" FontSize="18" Width="100"/>
                                    <ComboBox x:ConnectionId='53' x:Name="taskstatus" SelectedItem="{Binding status,Mode=TwoWay}"                                             
                                              Margin="10,20,0,0" Width="200" FontSize="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Related" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="10,10,0,0" Opacity="0.5" FontSize="18" Width="100"/>
                                    <ComboBox x:ConnectionId='52' x:Name="taskrelated" SelectedItem="{Binding collective,Mode=TwoWay}"                                             
                                              Margin="10,20,0,0" Width="200" FontSize="15"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel x:ConnectionId='49' x:Name="Panel5" Orientation="Horizontal"  Margin="10,20,0,10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="Start Date" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="10,10,0,0" Opacity="0.5" FontSize="18" Width="100"/>
                                    <CalendarDatePicker x:ConnectionId='51' x:Name="startDate1" Grid.Row="5" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" 
                                                        Date="{Binding startdate, Mode=TwoWay}" 
                                                                                             Width="200"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="End Date" HorizontalAlignment="Left"   TextWrapping="Wrap" VerticalAlignment="Center" 
                                               Margin="10,10,0,0" Opacity="0.5" FontSize="18" Width="100"/>
                                    <CalendarDatePicker x:ConnectionId='50' x:Name="endDate1" Grid.Row="5" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center" 
                                                        Date="{Binding enddate, Mode=TwoWay}" 
                                                                                           Width="200"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Width="550">
                            <Border x:ConnectionId='30' Name="_pivot" HorizontalAlignment="Left" BorderBrush="#D3D3D3" BorderThickness="0.5" Height="400" Width="540">
                                <Pivot>
                                    <Pivot.Items>
                                        <PivotItem Header="Comments">
                                            <StackPanel Orientation="Vertical">
                                                <StackPanel x:ConnectionId='38' x:Name="commen" Margin="0,15,0,0">
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="250">
                                                        <ListView x:ConnectionId='41' x:Name="commentsSection" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,10" FontSize="14" 
                                                                  MinHeight="40" Width="540" >
                                                            <ListView.ItemContainerStyle>
                                                                <Style TargetType="ListViewItem">
                                                                    <Setter Property="Padding" Value="0"/>
                                                                    <Setter Property="Margin" Value="0"/>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate                           >
                                                                    <StackPanel>
                                                                        <local:commentsUserControl/>
                                                                        <Border BorderBrush="#D3D3D3" Opacity="0.5" Width="500" BorderThickness="0,0.5,0,0" Margin="10,0,20,5"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>
                                                        </ListView>
                                                    </ScrollViewer>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBox x:ConnectionId='39' x:Name="combox" HorizontalAlignment="Left" Height="40" BorderThickness="0.4" BorderBrush="LightGray" 
                                                                 Margin="0,0,0,40" PlaceholderText="Type Here" TextWrapping="Wrap" Width="400"/>
                                                        <Button x:ConnectionId='40'  Content="Comment" Height="40" Margin="5,0,0,40"  Width="100"                      />
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </PivotItem>
                                        <PivotItem Header="Documents" >
                                            <StackPanel>
                                                <Button x:ConnectionId='36' Content="Upload Files" x:Name="upload"                     />
                                                <TextBlock x:ConnectionId='37' Name="files" Margin="0,10,0,0"></TextBlock>
                                            </StackPanel>
                                        </PivotItem>
                                        <PivotItem Header="Subtask" >
                                            <StackPanel>
                                                <Button x:ConnectionId='31' x:Name="subtask" Content="Add SubTask"                      />
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <ListView x:ConnectionId='32' x:Name="subtaskview" HorizontalAlignment="Left" Width="400" ItemsSource="{Binding Source={StaticResource cvs}}" 
                                                              IsItemClickEnabled="True"                                   Margin="10,20,0,20">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate                              >
                                                                <TextBlock x:ConnectionId='34' x:Name="subtask"                      FontWeight="Medium" FontFamily="Times New Roman" FontSize="14" Margin="15,0,0,0"/>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                        <ListView.GroupStyle>
                                                            <GroupStyle>
                                                                <GroupStyle.HeaderTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Key}" Margin="10,0" FontSize="16" FontWeight="SemiBold" Foreground="Black"  />
                                                                    </DataTemplate>
                                                                </GroupStyle.HeaderTemplate>
                                                            </GroupStyle>
                                                        </ListView.GroupStyle>
                                                    </ListView>
                                                </ScrollViewer>
                                            </StackPanel>
                                        </PivotItem>
                                    </Pivot.Items>
                                </Pivot>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <ContentDialog x:ConnectionId='5' x:Name="contentDialog2">
                <ContentDialog.TitleTemplate>
                    <DataTemplate>
                        <Grid >
                            <TextBlock Text="Edit Task" FontWeight="SemiBold" FontSize="18" FontFamily="TimesNewRoman"/>
                        </Grid>

                    </DataTemplate>
                </ContentDialog.TitleTemplate>
                <Border BorderBrush="Black" BorderThickness="1">
                    <Grid Margin="0,0,0,72">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="55.2"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="64.8"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="608"/>
                        </Grid.ColumnDefinitions>
                        <Button x:ConnectionId='18' x:Name="save" Content="Save" Foreground="White" Background="#FF009CD6" Margin="211,65,0,0"                   
                                Grid.Row="7" Grid.Column="1" Width="100" Height="34" VerticalAlignment="Top" Grid.RowSpan="2"  />
                        <Button x:ConnectionId='19' x:Name="cancel1" Content="Cancel" Margin="100,65,0,0"                       Grid.Row="7" Grid.Column="1" Width="100" Height="34" VerticalAlignment="Top" Grid.RowSpan="2"  />
                        <TextBlock Text="Task Name" Margin="10,10,10,9" FontSize="18" FontFamily="Segoe UI" Grid.Row="0"/>
                        <TextBox x:ConnectionId='20' Name="taskName1" Text="{Binding name,Mode=TwoWay}" Margin="33,13,305,8" Grid.Column="1" Grid.Row="0"/>
                        <StackPanel Grid.ColumnSpan="2" Grid.Row="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Task Description" Margin="10,10,10,9" FontSize="18" FontFamily="Segoe UI" VerticalAlignment="Center"/>
                                <Button x:ConnectionId='27' x:Name="edit1" FontFamily="Segoe MDL2 Assets" Content="&#xE104;"  Margin="0,10,0,0" VerticalAlignment="Top"                     />
                            </StackPanel>
                            <TextBox x:ConnectionId='26' Name="taskDetails1" Text="{Binding details,Mode=TwoWay}" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="1" Visibility="Collapsed" Margin="10,10,304,9" />
                        </StackPanel>

                        <TextBlock Text="Priority" FontSize="18" Margin="10,27,10,9" FontFamily="Segoe UI" Grid.Row="2"/>
                        <ComboBox x:ConnectionId='21' x:Name="priority1" SelectedItem="{Binding priority,Mode=TwoWay}" Width="271" Margin="33,0,0,0" Grid.Column="1" Grid.Row="2" SelectedIndex="0" VerticalAlignment="Center"  />
                        <TextBlock Text="Task List" FontSize="18" Margin="10,10,10,9" FontFamily="Segoe UI" Grid.Row="3"/>
                        <ComboBox x:ConnectionId='22' x:Name="collective1" SelectedItem="{Binding collective,Mode=TwoWay}" Width="271" Margin="33,0,0,0" Grid.Column="1" Grid.Row="3" SelectedIndex="2" VerticalAlignment="Center"  />
                        <TextBlock Text="Status" Margin="10,10,10,9" FontSize="18" FontFamily="Segoe UI" Grid.Row="4"/>
                        <ComboBox x:ConnectionId='23' Name="status" SelectedItem="{Binding status,Mode=TwoWay}" Margin="33,13,305,8" Grid.Column="1" Grid.Row="4" Width="271"/>
                        <TextBlock Text="Start Date" Grid.Column="0" Grid.Row="5" FontSize="18" Margin="10,10,10,9" FontFamily="Segoe UI"/>
                        <CalendarDatePicker x:ConnectionId='24' x:Name="startDate" Grid.Row="5" Grid.Column="1" Margin="33,0,0,0" VerticalAlignment="Center" Date="{Binding startdate,Mode=TwoWay}"/>
                        <TextBlock Text="End Date" Grid.Column="0" Grid.Row="6" FontSize="18" Margin="10,15,10,9" FontFamily="Segoe UI"/>
                        <CalendarDatePicker x:ConnectionId='25' x:Name="endDate" Grid.Row="6" Grid.Column="1" Margin="33,0,0,0" VerticalAlignment="Center" Date="{Binding enddate,Mode=TwoWay}"/>
                    </Grid>
                </Border>

            </ContentDialog>


            <ContentDialog x:ConnectionId='6' x:Name="contentDialog1">
                <ContentDialog.TitleTemplate>
                    <DataTemplate>
                        <Grid >
                            <TextBlock Text="Create SubTask" FontWeight="SemiBold" FontSize="18" FontFamily="TimesNewRoman"/>
                        </Grid>
                    </DataTemplate>
                </ContentDialog.TitleTemplate>
                <Border BorderBrush="Black" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="20,0,0,72">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="55.2"/>
                                <RowDefinition Height="195.2"/>
                                <RowDefinition Height="64.8"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="608"/>
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='8' x:Name="add" Content="Create Task" Foreground="White" Margin="211,65,0,0"                   Grid.Row="6"
                                Grid.Column="1" Width="100" Background="#FF009CD6" Height="34" VerticalAlignment="Top" Grid.RowSpan="2">
                            </Button>
                            <Button x:ConnectionId='9' x:Name="cancel" Content="Cancel" Margin="100,65,0,0"                      Grid.Row="6" Grid.Column="1" Width="100" Height="34" 
                                VerticalAlignment="Top" Grid.RowSpan="2"  />
                            <TextBlock Text="Task Name" Margin="10,10,10,9" FontSize="18" FontFamily="Segoe UI" Grid.Row="0"/>
                            <TextBox x:ConnectionId='10' Name="taskName" Margin="33,13,305,8" Grid.Column="1" Grid.Row="0"/>
                            <TextBox x:ConnectionId='11' Name="taskDetails" Header="Task Details" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="1" 
                                 ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10,10,304,9" FontSize="18"/>
                            <TextBlock Text="Priority" FontSize="18" Margin="10,16,10,20" FontFamily="Segoe UI" Grid.Row="2"/>
                            <ComboBox x:ConnectionId='12' x:Name="priority" Width="271" Margin="33,0,0,0" Grid.Column="1" Grid.Row="2" SelectedIndex="0" VerticalAlignment="Center" Height="32" />
                            <TextBlock Text="Assign To" FontSize="18" Margin="10,10,10,9" FontFamily="Segoe UI" Grid.Row="3"/>
                            <ComboBox x:ConnectionId='13' x:Name="Assignto" Width="271" Margin="33,0,0,0" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Height="32" >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <PersonPicture ProfilePicture="{Binding Img}" Height="20" Width="20"/>
                                            <TextBlock Text="{Binding name}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Text="Start Date" Grid.Column="0" Grid.Row="4" FontSize="18" Margin="10,10,10,9" FontFamily="Segoe UI"/>
                            <CalendarDatePicker x:ConnectionId='14' x:Name="startDate2" Grid.Row="4" Grid.Column="1" Margin="33,0,0,0" VerticalAlignment="Center" Height="32" Width="271"/>
                            <TextBlock Text="End Date" Grid.Column="0" Grid.Row="5" FontSize="18" Margin="10,15,10,9" FontFamily="Segoe UI"/>
                            <CalendarDatePicker x:ConnectionId='15' x:Name="endDate2" Grid.Row="5" Grid.Column="1" Margin="33,0,0,0" VerticalAlignment="Center" Height="32" Width="271"/>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </ContentDialog>
        </Grid>
    </Grid>
</Page>

